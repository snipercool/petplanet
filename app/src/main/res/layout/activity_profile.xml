<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:srcCompat="@drawable/profile"
            android:contentDescription="@string/iv_profile"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_title_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_title_profile"
            android:textSize="40sp"
            android:layout_below="@+id/iv_profile"
            android:textAlignment="center"
            />

        <ScrollView
            android:id="@+id/sv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/whiteroundrectangle"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="700dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_example_user_name"
                    android:textSize="24sp" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <!--Menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_menu_planet"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/planet"
            android:contentDescription="@string/ib_desc_menu_planet" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_menu_camera"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/qr"
            android:contentDescription="@string/ib_desc_menu_camera" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_menu_graphic"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/grahic"
            android:contentDescription="@string/ib_desc_menu_graphic" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>