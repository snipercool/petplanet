<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/gv_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph_temperature"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_menu_planet"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/planet"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="bottom"/>

            <Button
                android:id="@+id/btn_menu_camera"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/qr"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:gravity="bottom"/>
            <Button
                android:id="@+id/btn_menu_graphic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/grahic"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:gravity="bottom"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>