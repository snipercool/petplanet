<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gv_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="20dp">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_temperature"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_menu_planet"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/planet"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/btn_menu_camera"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/qr"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/btn_menu_graphic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/grahic"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
</RelativeLayout>